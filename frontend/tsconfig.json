{
  "compilerOptions": {
    "types": ["jest", "node"],
    "jsx":"react-jsx",
    "target": "ES2020",
    "allowJs":true,
    "resolveJsonModule":true,
    "esModuleInterop":true,
    "module":"commonjs",
    "moduleResolution":"node",
    "strict":true,
    "baseUrl":"./",
    "paths":{
      "@/":["src/"]
    },
    "outDir":"./dist",
    "skipLibCheck":true,
  },
  "include": [
    "src",
    "tests",
    "node_modules/@types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
